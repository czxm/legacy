<assembly>
	<id>bin</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<formats>
		<format>zip</format>
	</formats>
	<dependencySets>
		<dependencySet>
			<unpack>false</unpack>
			<scope>runtime</scope>
			<outputDirectory>lib</outputDirectory>
            <!--<excludes>-->
                <!--<exclude>*:hadoop*</exclude>-->
            <!--</excludes>-->
		</dependencySet>
	</dependencySets>
	<fileSets>
        <fileSet>
            <directory>conf</directory>
            <outputDirectory>conf</outputDirectory>
            <includes>
                <include>*.*</include>
            </includes>
        </fileSet>	
		<fileSet>
			<directory>src/main/command</directory>
			<outputDirectory>bin</outputDirectory>
			<includes>
				<include>*.sh</include>
				<include>*.bat</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>../soak-plugins/plugins</directory>
			<outputDirectory>plugins</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>